<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maxence.toeic_answer_sheet.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/newsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="switchToAnswer"
            android:text="New sheet" />

        <Button
            android:id="@+id/loadsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load Sheet" />

        <Button
            android:id="@+id/deletesheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Sheet"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
